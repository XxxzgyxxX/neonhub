    -- Fun√ß√£o para mostrar diferentes se√ß√µes
    local function showSection(sectionName)
        -- Limpar √°rea de conte√∫do
        for _, child in pairs(contentArea:GetChildren()) do
            if child:IsA("Frame") or child:IsA("ScrollingFrame") then
                child:Destroy()
            end
        end
        
        if sectionName == "Scripts" then
            -- Criar grid de scripts
            local scrollFrame = Instance.new("ScrollingFrame")
            scrollFrame.Name = "ScriptsScroll"
            scrollFrame.Size = UDim2.new(1, -20, 1, -20)
            scrollFrame.Position = UDim2.new(0, 10, 0, 10)
            scrollFrame.BackgroundTransparency = 1
            scrollFrame.ScrollBarThickness = 6
            scrollFrame.ScrollBarImageColor3 = config.mainColor
            scrollFrame.Parent = contentArea
            
            local gridLayout = Instance.new("UIGridLayout")
            gridLayout.CellSize = UDim2.new(0, 250, 0, 120)
            gridLayout.CellPadding = UDim2.new(0, 15, 0, 15)
            gridLayout.Parent = scrollFrame
            
            -- Criar cards para cada script
            for i, scriptData in ipairs(scriptsData) do
                local card = createScriptCard(scriptData, UDim2.new(0, 0, 0, 0))
                card.Parent = scrollFrame
            end
            
            -- Ajustar tamanho do scroll
            scrollFrame.CanvasSize = UDim2.new(0, 0, 0, math.ceil(#scriptsData / 2) * 135)
            
        elseif sectionName == "Dashboard" then
            -- Criar dashboard com estat√≠sticas
            local statsFrame = Instance.new("Frame")
            statsFrame.Name = "StatsFrame"
            statsFrame.Size = UDim2.new(1, -20, 0, 150)
            statsFrame.Position = UDim2.new(0, 10, 0, 10)
            statsFrame.BackgroundTransparency = 1
            statsFrame.Parent = contentArea
            
            local statsLayout = Instance.new("UIGridLayout")
            statsLayout.CellSize = UDim2.new(0, 140, 0, 70)
            statsLayout.CellPadding = UDim2.new(0, 10, 0, 10)
            statsLayout.Parent = statsFrame
            
            local stats = {
                {title = "Scripts Ativos", value = "42", icon = "üìú"},
                {title = "Execu√ß√µes", value = "1,337", icon = "‚ö°"},
                {title = "Uptime", value = "99.9%", icon = "‚è±Ô∏è"},
                {title = "Usu√°rios", value = "10K+", icon = "üë•"}
            }
            
            for _, stat in ipairs(stats) do
                local statCard = Instance.new("Frame")
                statCard.BackgroundColor3 = Color3.fromRGB(255, 255, 255, 0.05)
                statCard.BorderSizePixel = 0
                statCard.Parent = statsFrame
                
                local statCorner = Instance.new("UICorner")
                statCorner.CornerRadius = UDim.new(0, 8)
                statCorner.Parent = statCard
                
                local iconLabel = Instance.new("TextLabel")
                iconLabel.Size = UDim2.new(0, 30, 0, 30)
                iconLabel.Position = UDim2.new(0, 10, 0, 5)
                iconLabel.BackgroundTransparency = 1
                iconLabel.Text = stat.icon
                iconLabel.TextSize = 20
                iconLabel.Parent = statCard
                
                local valueLabel = Instance.new("TextLabel")
                valueLabel.Size = UDim2.new(1, -50, 0, 25)
                valueLabel.Position = UDim2.new(0, 45, 0, 5)
                valueLabel.BackgroundTransparency = 1
                valueLabel.Text = stat.value
                valueLabel.TextColor3 = config.mainColor
                valueLabel.TextSize = 18
                valueLabel.Font = Enum.Font.GothamBold
                valueLabel.TextXAlignment = Enum.TextXAlignment.Left
                valueLabel.Parent = statCard
                
                local titleLabel = Instance.new("TextLabel")
                titleLabel.Size = UDim2.new(1, -10, 0, 20)
                titleLabel.Position = UDim2.new(0, 10, 1, -25)
                titleLabel.BackgroundTransparency = 1
                titleLabel.Text = stat.title
                titleLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
                titleLabel.TextSize = 12
                titleLabel.Font = Enum.Font.Gotham
                titleLabel.TextXAlignment = Enum.TextXAlignment.Left
                titleLabel.Parent = statCard
            end
        end
        
        createNotification("Se√ß√£o " .. sectionName .. " carregada!", 2)
    end
    
    -- Criar bot√µes da sidebar
    createSidebarButton("Dashboard", "üè†", 20, function() showSection("Dashboard") end)
    createSidebarButton("Scripts", "üìú", 75, function() showSection("Scripts") end)
    createSidebarButton("Executor", "‚ö°", 130, function() showSection("Executor") end)
    createSidebarButton("Configura√ß√µes", "‚öôÔ∏è", 185, function() showSection("Configura√ß√µes") end)
    createSidebarButton("Sobre", "‚ÑπÔ∏è", 240, function() showSection("Sobre") end)
    
    -- Funcionalidade do bot√£o fechar
    closeButton.MouseButton1Click:Connect(function()
        createTween(container, {Size = UDim2.new(0, 0, 0, 0)}):Play()
        wait(0.3)
        mainFrame:Destroy()
    end)
    
    -- Tornar o GUI arrast√°vel
    local dragging = false
    local dragStart = nil
    local startPos = nil
    
    topBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = container.Position
        end
    end)
    
    topBar.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            container.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, 
                                         startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    
    -- Anima√ß√£o de entrada
    container.Size = UDim2.new(0, 0, 0, 0)
    createTween(container, {Size = UDim2.new(0, 800, 0, 600)}, 0.5):Play()
    
    -- Carregar dashboard por padr√£o
    wait(0.5)
    showSection("Dashboard")
    
    return mainFrame
end

-- Fun√ß√£o principal para inicializar o script
local function initializeBananaCat()
    print("‚ùÑÔ∏è Neon Hub Scripts v" .. config.version .. " - Inicializando...")
    
    -- Criar notifica√ß√£o de boas-vindas
    spawn(function()
        wait(1)
        createNotification("Bem-vindo ao ‚ùÑÔ∏è Neon Hub!", 4)
    end)
    
    -- Criar interface principal
    local gui = createMainGUI()
    
    print("‚ùÑÔ∏è Neon Hub carregado com sucesso!")
    
    return gui
end

-- Comando para abrir/fechar o painel
local function toggleGUI()
    if playerGui:FindFirstChild("NeonHubGUI") then
        playerGui.NeonHubGUI:Destroy()
        createNotification("Painel fechado!", 2)
    else
        initializeBananaCat()
    end
end

-- Atalho de teclado (Insert para abrir/fechar)
UserInputService.InputBegan:Connect(function(key, gameProcessed)
    if not gameProcessed and key.KeyCode == Enum.KeyCode.Insert then
        toggleGUI()
    end
end)

-- Inicializar automaticamente
initializeBananaCat()

-- Exportar fun√ß√µes principais
return {
    initialize = initializeBananaCat,
    toggle = toggleGUI,
    config = config
}
