local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Configura√ß√µes do painel
local config = {
    mainColor = Color3.fromRGB(255, 215, 0), -- Dourado
    backgroundColor = Color3.fromRGB(26, 26, 46),
    secondaryColor = Color3.fromRGB(22, 33, 62),
    textColor = Color3.fromRGB(255, 255, 255),
    accentColor = Color3.fromRGB(0, 255, 136),
    version = "2.5.1",
    title = "Neon Hub"
}

-- Fun√ß√£o para criar efeitos de tween
local function createTween(object, properties, duration, easingStyle)
    duration = duration or 0.3
    easingStyle = easingStyle or Enum.EasingStyle.Quart
    local tweenInfo = TweenInfo.new(duration, easingStyle, Enum.EasingDirection.Out)
    local tween = TweenService:Create(object, tweenInfo, properties)
    return tween
end

-- Fun√ß√£o para criar notifica√ß√£o
local function createNotification(message, duration)
    duration = duration or 3
    
    local notification = Instance.new("Frame")
    notification.Name = "NeonHubNotification"
    notification.Size = UDim2.new(0, 300, 0, 80)
    notification.Position = UDim2.new(1, -320, 0, 20)
    notification.BackgroundColor3 = config.accentColor
    notification.BorderSizePixel = 0
    notification.Parent = playerGui
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = notification
    
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, -20, 1, -20)
    textLabel.Position = UDim2.new(0, 10, 0, 10)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = message
    textLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    textLabel.TextScaled = true
    textLabel.Font = Enum.Font.GothamBold
    textLabel.Parent = notification
    
    -- Anima√ß√£o de entrada
    createTween(notification, {Position = UDim2.new(1, -320, 0, 20)}):Play()
    
    -- Remover ap√≥s o tempo especificado
    wait(duration)
    createTween(notification, {Position = UDim2.new(1, 20, 0, 20)}):Play()
    wait(0.3)
    notification:Destroy()
end

