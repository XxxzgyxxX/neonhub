            premiumBadge.TextSize = 10
            premiumBadge.Font = Enum.Font.GothamBold
            premiumBadge.Parent = card
            
            local badgeCorner = Instance.new("UICorner")
            badgeCorner.CornerRadius = UDim.new(0, 10)
            badgeCorner.Parent = premiumBadge
        end
        
        -- Bot√£o Executar
        local executeButton = Instance.new("TextButton")
        executeButton.Name = "ExecuteButton"
        executeButton.Size = UDim2.new(0, 100, 0, 30)
        executeButton.Position = UDim2.new(0, 10, 1, -40)
        executeButton.BackgroundColor3 = config.mainColor
        executeButton.Text = "Executar"
        executeButton.TextColor3 = Color3.fromRGB(0, 0, 0)
