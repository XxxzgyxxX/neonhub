-- Redz Hub Premium | By: SeuNome
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- ConfiguraÃ§Ãµes
local ToggleKey = Enum.KeyCode.F4 -- Tecla para abrir/fechar
local MainColor = Color3.fromRGB(140, 0, 255) -- Cor roxa do hub

-- Cria a GUI
local gui = Instance.new("ScreenGui")
gui.Name = "RedzHub"
gui.Parent = player:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 350, 0, 400)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = gui

local title = Instance.new("TextLabel")
title.Text = "REDZ HUB ðŸš€"
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = MainColor
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.Parent = mainFrame

local closeBtn = Instance.new("TextButton")
closeBtn.Text = "X"
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -30, 0, 0)
closeBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.Parent = mainFrame
closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

local tabButtons = Instance.new("Frame")
tabButtons.Size = UDim2.new(1, 0, 0, 30)
tabButtons.Position = UDim2.new(0, 0, 0, 40)
tabButtons.BackgroundTransparency = 1
tabButtons.Parent = mainFrame

local tabs = {"Main", "Teleports", "Player"}
local currentTab = "Main"

local function createTab(name)
    local btn = Instance.new("TextButton")
    btn.Text = name
    btn.Size = UDim2.new(0, 100, 1, 0)
    btn.Position = UDim2.new(0, (table.find(tabs, name) - 1) * 100, 0, 0)
    btn.BackgroundColor3 = (name == currentTab) and MainColor or Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.Gotham
    btn.Parent = tabButtons
    btn.MouseButton1Click:Connect(function()
        currentTab = name
        for _, child in ipairs(tabButtons:GetChildren()) do
            if child:IsA("TextButton") then
                child.BackgroundColor3 = (child.Text == name) and MainColor or Color3.fromRGB(50, 50, 50)
            end
        end
    end)
    return btn
end

for _, tabName in ipairs(tabs) do
    createTab(tabName)
end

local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, -10, 1, -80)
scrollFrame.Position = UDim2.new(0, 5, 0, 75)
scrollFrame.BackgroundTransparency = 1
scrollFrame.ScrollBarThickness = 5
scrollFrame.Parent = mainFrame

local function createButton(text, callback)
    local button = Instance.new("TextButton")
    button.Text = text
    button.Size = UDim2.new(1, -10, 0, 40)
    button.Position = UDim2.new(0, 5, 0, #scrollFrame:GetChildren() * 45)
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Font = Enum.Font.Gotham
    button.Parent = scrollFrame
    button.MouseButton1Click:Connect(callback)
    return button
end

-- FunÃ§Ãµes do Hub
local flying = false
createButton("Fly Hack (X)", function()
    flying = not flying
    if flying then
        local bodyGyro = Instance.new("BodyGyro", player.Character.HumanoidRootPart)
        local bodyVelocity = Instance.new("BodyVelocity", player.Character.HumanoidRootPart)
        bodyGyro.D = 50
        bodyGyro.P = 10000
        bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
        bodyVelocity.Velocity = Vector3.new(0, 0, 0)
        bodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
        while flying and wait() do
            player.Character.Humanoid.PlatformStand = true
            if UIS:IsKeyDown(Enum.KeyCode.W) then
                bodyVelocity.Velocity = player.Character.HumanoidRootPart.CFrame.LookVector * 50
            elseif UIS:IsKeyDown(Enum.KeyCode.S) then
                bodyVelocity.Velocity = player.Character.HumanoidRootPart.CFrame.LookVector * -50
            end
        end
    else
        player.Character.Humanoid.PlatformStand = false
        for _, obj in ipairs(player.Character.HumanoidRootPart:GetChildren()) do
            if obj:IsA("BodyGyro") or obj:IsA("BodyVelocity") then
                obj:Destroy()
            end
        end
    end
end)

createButton("Speed Hack (Shift)", function()
    player.Character.Humanoid.WalkSpeed = 50
end)

createButton("Noclip (N)", function()
    local noclip = false
    RunService.Stepped:Connect(function()
        if noclip and player.Character then
            for _, part in ipairs(player.Character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end)
    noclip = not noclip
end)

createButton("Teleport to Base", function()
    player.Character:MoveTo(Vector3.new(0, 100, 0))
end)

-- Atalho para abrir/fechar
UIS.InputBegan:Connect(function(input, processed)
    if input.KeyCode == ToggleKey and not processed then
        mainFrame.Visible = not mainFrame.Visible
    end
end)

print("âœ… Redz Hub carregado! Pressione F4 para abrir.")
